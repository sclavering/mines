<?xml version="1.0"?>

<?xml-stylesheet href="minesweeper.css" type="text/css"?>

<!DOCTYPE window SYSTEM "chrome://minesweeper/locale/minesweeper.dtd">

<window xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
	windowtype="minesweeper"
	id="minesweeper-window2"
	title="&Minesweeper;"
	persist="screenX screenY"
	>

<script type="application/x-javascript" src="minesweeper.js"/>

<toolbox id="main-toolbox">
	<menubar id="main-menubar">
		<menu id="game-menu" label="&gamemenu;">
			<menupopup id="game-menu-popup">
				<menuitem label="&newgame;" oncommand="newGame();"/>
				<menuseparator/>
				<menuitem type="radio" id="dif-0" name="difficulty" label="&beginner;" oncommand="newGame(0);"/>
				<menuitem type="radio" id="dif-1" name="difficulty" label="&intermediate;" oncommand="newGame(1);"/>
				<menuitem type="radio" id="dif-2" name="difficulty" label="&expert;" oncommand="newGame(2);"/>
				<menuseparator/>
				<menuitem type="radio" id="shape-square" name="shape" label="&squaretiles;" oncommand="newSquareGame();"/>
				<menuitem type="radio" id="shape-hex"    name="shape" label="&hextiles;" oncommand="newHexagonalGame();"/>
				<menuseparator/>
				<menu label="&minespertile;" oncommand="setMinesPerTile(event.target.getAttribute('value'));">
				  <menupopup id="minespertile-popup">
				    <menuitem id="minespertile-1" type="radio" value="1" label="&minespertile.one;"/>
				    <menuitem id="minespertile-2" type="radio" value="2" label="&minespertile.two;"/>
				    <menuitem id="minespertile-3" type="radio" value="3" label="&minespertile.three;"/>
				    <menuitem id="minespertile-4" type="radio" value="4" label="&minespertile.four;"/>
				    <menuitem id="minespertile-5" type="radio" value="5" label="&minespertile.five;"/>
				  </menupopup>
				</menu>
				<menuseparator/>
				<menuitem label="&exit;" oncommand="window.close();"/>
			</menupopup>
		</menu>
	</menubar>
</toolbox>

<hbox id="main-panel">
  <vbox id="status-panel" align="start">
    <image id="new-game-button" onclick="newGame();"/>

    <label id="timer"/>

    <hbox align="center">
      <image class="f1 counter-icon"/>
      <label id="mine-counter-0"/>
    </hbox>
    <hbox align="center">
      <image class="f2 counter-icon"/>
      <label id="mine-counter-1"/>
    </hbox>
    <hbox align="center">
      <image class="f3 counter-icon"/>
      <label id="mine-counter-2"/>
    </hbox>
    <hbox align="center">
      <image class="f4 counter-icon"/>
      <label id="mine-counter-3"/>
    </hbox>
    <hbox align="center">
      <image class="f5 counter-icon"/>
      <label id="mine-counter-4"/>
    </hbox>
  </vbox>

  <box id="game-panel">
    <hbox id="square-grid"/>
    <hbox id="hex-grid"/>
  </box>
</hbox>

</window>
